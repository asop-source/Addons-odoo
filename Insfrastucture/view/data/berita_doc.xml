<odoo>
	<data>
		<record id="view_doc_berita_tree" model="ir.ui.view">
			<field name="name">view_doc_berita_tree.tree</field>
			<field name="model">management.documentberita</field>
			<field name="type">tree</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<tree string="Dokumen BCP">
                     
                            <field name="judul" />
                            <field name="start_date" />
                            <field name="publish" />
                </tree>
            </field>
		</record>

		<record id="view_doc_berita_form" model="ir.ui.view">
			<field name="name">view_doc_berita_tree.form</field>
			<field name="model">management.documentberita</field>
			<field name="type">form</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<form string="Berita">
					<sheet>
					<div class="oe_title" >
						<label name="judul" class="oe_edit_only" string="Name Judul"/>
						<h1>
                             <field name="judul" />
                       	</h1>
					</div>
					<group>

                            <field name="start_date" />
                            <field name="publish" />
   			        </group>
   			   		</sheet>
                </form>
            </field>
		</record>

	</data>
</odoo>